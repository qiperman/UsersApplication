@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    
     <li class="dropdown">
     <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.GetUserName() <span class="caret"></span></a>
         <ul class="dropdown-menu">
         <li>@Html.ActionLink("Настройки", "Edit")</li>
         <li role="separator" class="divider"></li>
         <li>@Html.ActionLink("Выход", "Logout")</li>
         </ul>
     </li>
}
else
{
    <li>@Html.ActionLink("Вход", "Login")</li>
    <li>@Html.ActionLink("Регистрация", "Register")</li>
}
